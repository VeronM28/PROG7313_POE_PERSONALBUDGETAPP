<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.savings.SavingsGoalPage">
    <!-- this is the savings goal page -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F3FF"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_balance_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/gradient_background"
            android:textAlignment="center"/>
        <!-- this is the text view in the balance -->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="R 0.00"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gradient_background"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <!-- this is the layout part  -->
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Spending"
    android:textSize="28dp"
    android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contributionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtContributions"
            tools:listitem="@layout/item_contribution" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

